<%= content_for(:title, "Teachers") %>
<h1>Teachers</h1>
<hr>
<p><%= link_to 'New Teacher', new_teacher_path, class: "btn btn-primary" %></p>
<div class="row">
  <div class="col">
    <% if @teachers.any? %>
      <%= render "teacher_grid", teachers: @teachers %>
    <% else %>
      <p>There are no teachers yet.</p>
    <% end %>
  </div>
</div>