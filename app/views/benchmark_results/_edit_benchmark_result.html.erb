  <%= form_for [@student, @benchmark_result] do |form|%>
  <div class="row">
    <h2 class = "mt-3">Test Information</h2>
    <div class="col-2">
      <%= form.label :date %>
      <%= form.date_select :date, { :discard_day => true,  selected: Date.today }, class: "form-select mb-3"  %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col">
      <%= form.label :ge, 'TOWSRF Test of Silent Word Reading Fluency Grade Equivalence (GE)' %>
      <%= form.number_field :ge, min: 0, max: 1000, step: 0.01, class: "form-control"  %>
    </div>
    <div class="col">
      <h2 class = "mt-3">Gates-MacGinitie</h2>
      <%= form.label :vocab_ge, 'Vocab GE' %>
      <%= form.number_field :vocab_ge, min: 0,max: 1000, step: 0.01, class: "form-control"  %>
      <%= form.label :reading_comp_ge, 'Reading Comp. GE' %>
      <%= form.number_field :reading_comp_ge, min: 0,max: 1000, step: 0.01, class: "form-control"  %>
    </div>
    <div class="col">
      <h2 class = "mt-3">DIBELS</h2>
      <%= form.label :lnf, 'Letter Naming Fluency (LNF)' %>
      <%= form.number_field :lnf, min: 0,max: 1000, step: 0.01, class: "form-control"  %>
      <%= form.label :snf, 'Sound Naming Fluency (SNF)' %>
      <%= form.number_field :snf, min: 0,max: 1000, step: 0.01, class: "form-control"  %>
      <%= form.label :orf_grade_lvl, 'ORF Grade Level' %>
      <%= form.number_field :orf_grade_lvl, min: 0,max: 1000, step: 0.01, class: "form-control"  %>
      <%= form.label :orf_cwpm, 'ORF CWPM' %>
      <%= form.number_field :orf_cwpm, min: 0,max: 1000, step: 0.01, class: "form-control"  %>
      <%= form.label :orf_accuracy, 'ORF Accuracy' %>
      <%= form.number_field :orf_accuracy, min: 0, max: 100, step: 1, class: "form-control"   %>
    </div>
    <div class="col">
      <h2>TOWRE</h2>
      <ul>
        <li>- "Sight Word GE" (subtest, decimal to the tenths between 0-12)</li>
        <li>- "Phonemic Decoding GE" (subtest, decimal to the tenths between 0-12)</li>
      </div>
      <div class="col">
        <h2>CTOPP</h2>
        <ul>
          <li> - "Elision GE" (subtest, decimal to the tenths between 0-12)</li>
          <li>- "Blending GE" (subtest, decimal to the tenths between 0-12)</li>
          <li>- "Isolation GE" (subtest, decimal to the tenths between 0-12)</li>
        </div>
      </div>
      <div class="row mt-3">
        <%= form.submit class: "btn btn-primary m-3" %>
      </div>

    <% end %>
